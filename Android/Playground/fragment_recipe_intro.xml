<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".recipe_intro">

    <TextView
        android:id="@+id/tv_recipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chris' Nachos"
        android:textAlignment="center"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_recipeImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/chile_cheese_nachos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_makes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_local_dining_black_24dp"
        android:text="Makes: 4 Servings"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_prep"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_recipeImage" />

    <TextView
        android:id="@+id/tv_prep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
        android:text="Prep Time: 15 minutes"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_makes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_makes" />

    <TextView
        android:id="@+id/tv_cook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/ic_watch_later_black_24dp"
        android:text="Cook Time: 5 minutes"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_bake"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_makes" />

    <TextView
        android:id="@+id/tv_bake"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_watch_later_black_24dp"
        android:text="Bake Time: None"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_cook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_cook" />

</androidx.constraintlayout.widget.ConstraintLayout>